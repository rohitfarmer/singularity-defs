BootStrap: docker
From: ubuntu:bionic

%labels
    APPLICATION_NAME PhiP-Seq
    AUTHOR_NAME Rohit Farmer
    AUTHOR_EMAIL rohit.farmer@gmail.com
    YEAR 2025

%help
    This container conatins:
        Phip-Stat
	Trimmomatic 0.39
        FastX Toolkit
        Bowtie2
        Samtools

%environment
    # Set system locale
    PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8 

%post
    # Change to tmp directory to download temporary files
    cd /tmp/singularity-build

    echo "Installing compilers and libraries"
    apt-get -qq -y update
    
    export DEBIAN_FRONTEND=noninteractive
    apt-get -qq install -y --no-install-recommends tzdata apt-utils software-properties-common 

    ln -fs /usr/share/zoneinfo/America/New_York /etc/localtime 
    dpkg-reconfigure --frontend noninteractive  tzdata
    
    apt-get -y --no-install-recommends upgrade 
    apt-get -y update
    apt-get install -y --no-install-recommends \
        autoconf \
        automake \
        build-essential \
        bzip2 \
        ca-certificates \
        cmake \
        curl \
        fuse \
        gcc \
        g++ \
        gfortran \
        git \
        gdal-bin \
        libgdal-dev \
        libtool \
        libjpeg-dev \
        libpng-dev \
        libtiff-dev \
        libatlas-base-dev \
        libxml2-dev \
        libcairo2-dev \
        libeigen3-dev \
        libcupti-dev \
        libpcre2-dev \
        libpcre3-dev \
        libssl-dev \
        libcurl4-openssl-dev \
        libboost-dev \
        libboost-system-dev \
        libboost-thread-dev \
        libboost-serialization-dev \
        libboost-regex-dev \
        libfribidi-dev \
        libgtk2.0-dev \
        libreadline-dev \
        libbz2-dev \
        liblzma-dev \
        libhdf5-dev \
        libpcre++-dev \
        libpango1.0-dev \
        libopenblas-dev \
        liblapack-dev \
	libudunits2-dev \
	libv8-dev \
        libxt-dev \
        openjdk-8-jdk \
	proj-bin \
        python3-neovim \
        python3-dev \
        python3-pip \
        python3-setuptools \
        tcl \
        tcl-dev \
        tk \
        tk-dev \
        texlive \
	texlive-latex-extra \
        texlive-fonts-extra \
        texinfo \
	unzip \
        vim \
        wget \
        xvfb \
        xauth \
        xfonts-base \
        zlib1g-dev \
        zip \
        bowtie2 \
        samtools \
        fastx-toolkit

        export LC_ALL=C.UTF-8
        export LANG=C.UTF-8 

# Clean /tmp of any previous downloads
        rm -rf /tmp/singularity-build/*

# Install Phip-Stat
        python3 -m pip install phip-stat --no-input

# Install Trimmomatic
	wget -c https://github.com/usadellab/Trimmomatic/files/5854859/Trimmomatic-0.39.zip
	unzip Trimmomatic-0.39.zip
	mv Trimmomatic-0.39 /opt
	rm Trimmomatic-0.39.zip

# Cleanup
    echo "Cleaning"
    apt-get -qq clean
    rm -rf /var/lib/apt/lists/*
    rm -rf tmp/singularity-build/*
